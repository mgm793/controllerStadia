{
  "compilerOptions": {
    "target": "es2016",                                  
    "module": "ESNext",
    "moduleResolution": "nodenext",                                
    "esModuleInterop": true,
    "outDir": "dist",                                               
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
  },
  "include": ["src/**/*"]
}
